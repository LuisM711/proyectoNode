extends layout

block content
  .modal#confirmLogoutModal(tabindex="-1")
    .modal-dialog
      .modal-content
        .modal-header
          h5.modal-title Confirmar Cierre de Sesión
          button.btn-close(data-bs-dismiss="modal" aria-label="Close" type="button")
        .modal-body
          p ¿Estás seguro de que deseas cerrar la sesión?
        .modal-footer
          button.btn.btn-secondary(data-bs-dismiss="modal" type="button") Cancelar
          a.btn.btn-primary(href="#" onclick="confirmarCerrarSesion()") Confirmar cierre de sesión
  .container.mt-5
    .row.justify-content-center
      .col-md-6.text-center
        h1 Sistema de Nómina
        p Bienvenido al sistema de nómina. Seleccione una opción a continuación:
        .mb-3
          a(href="/usuarios" class="btn btn-primary") Control de Usuarios
        .mb-3
          a(href="/nomina" class="btn btn-success") Consultar nómina
        .mb-3
          a(href="/" class="btn btn-warning") Modificar salarios
        .mb-3
          a(href="/" class="btn btn-info") Ver resumen de gastos
        .mb-3
          a(href="/" class="btn btn-light") Ver historial de nómina
        .mb-3
          a(href="/" class="btn btn-warning") Modificar impuestos y deducciones 
        .mb-3
          a(href="/" class="btn btn-dark") Acceso a documentos importantes
        .mb-3
          a(href="#" class="btn btn-secondary") Actualizar información bancaria
        .mb-3
          a(href="#" onclick="abrirModalCerrarSesion()" class="btn btn-danger") Cerrar sesión

  script.
    const confirmLogoutModal = new bootstrap.Modal(document.getElementById('confirmLogoutModal'))
    const abrirModalCerrarSesion = () => confirmLogoutModal.show()

    const confirmarCerrarSesion = () => {
      // Aquí puedes agregar lógica adicional antes de redirigir a "logout"
      window.location.href = "/logout"
    }
